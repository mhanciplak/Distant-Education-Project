@model egitim.Models.konular

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<h2>Edit</h2>

<h4>konular</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="ders_id" class="control-label"></label>
                <select asp-for="ders_id" class="form-control" asp-items="@(new SelectList(ViewBag.message,"id","ders"))"></select>
                <span asp-validation-for="ders_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="konu" class="control-label"></label>
                <input asp-for="konu" class="form-control" />
                <span asp-validation-for="konu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="youtube" class="control-label"></label>
                <input asp-for="youtube" class="form-control" />
                <span asp-validation-for="youtube" class="text-danger"></span>
            </div>
           
           
            <div class="form-group">
                <label asp-for="sinav" class="control-label"></label>
                <select asp-for="sinav" class="form-control">
                    <option value="">Seçim Yapınız</option>
                    <option value="1">Aktif</option>
                    <option value="0">Pasif</option>
                </select>
                <span asp-validation-for="sinav" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sira" class="control-label"></label>
                <input asp-for="sira" class="form-control" type="number" />
                <span asp-validation-for="sira" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

